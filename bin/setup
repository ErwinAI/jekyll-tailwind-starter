#! /usr/bin/env bash

set -e

bin/bootstrap

if [ ! -f _includes/tailwind.js ]; then
  echo "==> Running \`yarn run tailwind init_includes/tailwind.js --no-comments \`"
  yarn run tailwind init _includes/tailwind.js --no-comments
fi

repo_name=$(cat .git/description)

if [ "$repo_name" != "jekyll-tailwind-starter" ]; then
  echo "==> Reinitializing Git repository"
  rm -rf .git

  git init

  echo "jekyll-tailwind-starter" > .git/description
fi
